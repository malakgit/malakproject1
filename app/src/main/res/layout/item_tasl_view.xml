<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/itmTvTittle"
        android:layout_width="68dp"
        android:layout_height="28dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itemTvSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/itemTvImportant"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemTvImportant" />

    <TextView
        android:id="@+id/itemTvImportant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="87dp"
        android:text="important"
        app:layout_constraintBottom_toTopOf="@+id/imageCall"
        app:layout_constraintEnd_toStartOf="@+id/itemTvNecessary" />

    <TextView
        android:id="@+id/itemTvNecessary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:text="necassery"
        app:layout_constraintBaseline_toBaselineOf="@+id/itemTvImportant"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageEdit"
        android:layout_width="70dp"
        android:layout_height="106dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageDelete"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <ImageView
        android:id="@+id/imageDelete"
        android:layout_width="68dp"
        android:layout_height="96dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="250dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <ImageView
        android:id="@+id/imageCall"
        android:layout_width="54dp"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageEdit"
        app:layout_constraintStart_toEndOf="@+id/imageEdit"
        app:layout_constraintTop_toTopOf="@+id/imageEdit"
        app:srcCompat="@android:drawable/stat_sys_phone_call_forward" />

</androidx.constraintlayout.widget.ConstraintLayout>